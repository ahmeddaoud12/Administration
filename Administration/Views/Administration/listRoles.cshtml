@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All list Roles";
}
    <div class="container">
        <br />
        <br />
        <br />
        <h2>@ViewData["Title"]</h2>

        @if (Model.Any())
        {
            <div>
                <a class="btn btn-outline-dark" asp-controller="Administration" asp-action="CreateRole">
                    create role
                </a>
            </div>
            foreach (var role in Model)
            {
                <div class="paddingCard">
                    <div class="card card2">
                        <div class="card-header card-header2">
                            Role Id : @role.Id
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                @role.Name
                            </h5>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-outline-success" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">
                                Edit
                            </a>
                            <a class="btn btn-outline-danger" href="#">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
         }
        else
        {
            <div class="card card2">
                <div class="card-header card-header2">
                    No Roles Created yet
                </div>
                <div class="card-body">
                    <h5>
                        Use The Button below to create a role
                    </h5>
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">
                        create role
                    </a>
                </div>
            </div>
        }
    </div>

