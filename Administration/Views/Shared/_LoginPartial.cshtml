@using Microsoft.AspNetCore.Identity
@using Administration.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<style>
    .register1 {
        color: white;
        padding: 5px;
        text-decoration: none;
    }
        .register1:hover {
            color: #808080;
            padding: 5px;
            text-decoration: none;
        }
    .login1 {
        color: white;
        padding: 5px;
        text-decoration: none;
    }

        .login1:hover {
            color: #808080;
            padding: 5px;
            text-decoration: none;
        }
    .managestyle {
        color: white;
        text-decoration: none;
    }
        .managestyle:hover {
            color: white;
            text-decoration: none;
        }
    .Logout {
        color: white;
        text-decoration: none;
    }
        .Logout:hover {
            color: white;
            text-decoration: none;
        }
</style>
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li style="padding-top: 7px;">
                <a class="managestyle" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link Logout">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li><a class="register1" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="login1" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
