@model RegisterViewModel

@{
    ViewData["Title"] = "RegisterAdmin";
}

<div class="container-fluid containerBackground">
    <div class="container paddingcontainer">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 padding-div">
            <div class="row">
                <div class="col-xl-7 col-lg-7 col-md-6 col-sm-12 col-12" style="padding:0px;">
                    <img src="~/images/Education.jpg" class="img-responsive" width="100%" height="100%" />
                </div>
                <div class="col-xl-5 col-lg-5 col-md-6 col-sm-12 col-12">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <br />
                        <h4 class="text-title1">Créer un nouveau compte.</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group padding-form">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group padding-form">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group padding-form">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <div class="form-group padding-form" style="padding-top: 20px;">
                            <button type="submit" class="btn btn-danger btn_RegisterLogin" style="width:100%">Register</button>
                        </div>
                        <br />
                        <div class="form-group padding-form" style="padding-top: 0px;">
                            <a class="btn btn-warning btn_RegisterLogin" href="@Url.Action("Login","Account")"><i class="fas fa-sign-in-alt"></i></a>
                            <a class="btn btn-primary btn_RegisterLogin" href="https://www.facebook.com/ahmed.daoud191" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-dark btn_RegisterLogin" href="mailto:ahmeddaoud19@yandex.com"><i class="fas fa-envelope"></i></a>
                            <a class="btn btn-danger btn_RegisterLogin" href="https://www.youtube.com/channel/UCXzGoh84rwz8tfONjQ0w6mw/" target="_blank"><i class="fab fa-youtube"></i></a>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
