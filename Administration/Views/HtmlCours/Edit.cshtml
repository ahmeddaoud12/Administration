@model Administration.Models.HtmlCours

@{
    ViewData["Title"] = "Edit";
    <style>
        .card3 {
            box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        }
        .buttonupdate {
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        }
    </style>
}
<div class="container">
    <br />
    <br />
    <br />
    <center>
        <h2>Modification Cours</h2>
    </center>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 card3">
                    <br />
                    <div class="row">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                            <div class="form-group">
                                <label asp-for="Nom" class="control-label"></label>
                                <input asp-for="Nom" class="form-control" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                            <div class="form-group">
                                <label asp-for="UrlFiche" class="control-label"></label>
                                <input asp-for="UrlFiche" class="form-control" />
                                <span asp-validation-for="UrlFiche" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 ">
                            <div class="form-group">
                                <label asp-for="DateAjout" class="control-label"></label>
                                <input asp-for="DateAjout" class="form-control" />
                                <span asp-validation-for="DateAjout" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 card card3">
                    <br />
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <center>
                    <div class="form-group">
                        <br />
                        <input type="submit" value="Save" class="btn btn-outline-success buttonupdate" />
                    </div>
                </center>
                    
            </form>
        </div>
    </div>
</div>

